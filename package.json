{
  "name": "rdf-string-ttl",
  "version": "1.2.0",
  "description": "Convenience functions for creating and serializing RDF terms and quads following Turtle/SPARQL syntax",
  "keywords": [
    "rdf",
    "rdfjs",
    "term",
    "quad",
    "triple",
    "turtle",
    "sparql",
    "n3"
  ],
  "main": "index.js",
  "typings": "index",
  "repository": "git@github.com:rubensworks/rdf-string-ttl.js.git",
  "author": "Ruben Taelman <rubensworks@gmail.com>",
  "bugs": {
    "url": "https://github.com/rubensworks/rdf-string-ttl.js/issues"
  },
  "homepage": "https://github.com/rubensworks/rdf-string-ttl.js#readme",
  "license": "MIT",
  "files": [
    "lib/**/*.d.ts",
    "lib/**/*.js",
    "index.d.ts",
    "index.js"
  ],
  "dependencies": {
    "@rdfjs/types": "*",
    "rdf-data-factory": "^1.1.0"
  },
  "pre-commit": [
    "build",
    "lint",
    "test"
  ],
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "coveralls": "^3.0.0",
    "eslint": "^8.24.0",
    "jest": "^29.0.0",
    "manual-git-changelog": "^1.0.0",
    "pre-commit": "^1.2.2",
    "ts-jest": "^29.0.0",
    "typescript": "^4.8.4"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverage": true
  },
  "scripts": {
    "test": "jest ${1}",
    "test-watch": "jest ${1} --watch",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "lint": "eslint --cache index.ts lib/**/*.ts test/**/*.ts --ignore-pattern '**/*.d.ts'",
    "build": "tsc",
    "validate": "npm ls",
    "prepare": "npm run build",
    "version": "manual-git-changelog onversion"
  }
}
